<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <TextView android:id="@+id/accel"
        android:text="Accelerometer data:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/accelData"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accel"/>

    <TextView android:id="@+id/gyro"
        android:text="\nGyroscope Data:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accelData"/>

    <TextView android:id="@+id/gyroData"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gyro"/>

    <TextView android:id="@+id/mag"
        android:text="\nMagnetic Field Data:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gyroData"/>

    <TextView android:id="@+id/magData"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mag"/>

    <TextView
        android:id="@+id/step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\nStep Counter Data"
        android:layout_below="@id/magData"/>

    <TextView
        android:id="@+id/stepData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/step"/>

    <ToggleButton
        android:id="@+id/recordData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stepData"
        android:textOff="Record Data"
        android:textOn="Send to Cloud"
        android:checked="false"/>

</RelativeLayout>

    </ScrollView>
